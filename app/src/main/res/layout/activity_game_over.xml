<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOver"
    android:background="@drawable/bg_secondary">

    <TextView
        android:padding="20sp"
        android:background="@drawable/btn_bg_secondary"
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="20/30"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:padding="10sp"
        android:background="@drawable/btn_bg_secondary"
        android:id="@+id/go_to_start_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="goToStart"
        android:text="Play Another"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/bgcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_over"
        app:layout_constraintVertical_bias="0.349" />
</android.support.constraint.ConstraintLayout>