<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brainshare_0010_bg"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/iv_brain"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/brainshare_0008_brain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_brain">

        <ImageView
            android:id="@+id/b_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0007_b" />

        <ImageView
            android:id="@+id/r_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0006_r" />

        <ImageView
            android:id="@+id/a_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0005_a" />

        <ImageView
            android:id="@+id/i_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0004_i" />

        <ImageView
            android:id="@+id/n_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0003_n" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/s_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0002_s" />

        <ImageView
            android:id="@+id/h_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0001_h" />

        <ImageView
            android:id="@+id/a_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0005_a" />

        <ImageView
            android:id="@+id/r_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0006_r" />

        <ImageView
            android:id="@+id/e_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/brainshare_0000_e" />

    </LinearLayout>

    <Button
        android:id="@+id/play_quiz_btn"
        android:layout_width="309dp"
        android:layout_height="48dp"
        android:background="@drawable/brainshare_0009_playquiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>